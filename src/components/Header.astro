---
const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/blog', label: 'Blog' },
  { href: '/fiction', label: 'Fiction' },
  { href: '/about', label: 'About' },
  { href: '/contact', label: 'Contact' },
];
---

<header class="bg-white dark:bg-[#0F0F1A] border-b border-gray-200 dark:border-gray-800 shadow-sm">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-4 flex items-center justify-between">
    <!-- Logo and Branding -->
    <a href="/" class="flex items-center space-x-3">
      <img src="/logo-rantique.png" alt="Rantique Logo" class="h-10 w-auto" loading="lazy" />
      <span class="text-2xl font-bold text-[#1A1A2E] dark:text-white tracking-wide">Rantique</span>
    </a>

    <!-- Desktop Nav -->
    <nav class="space-x-4 hidden sm:flex">
      {navLinks.map(link => (
        <a
          href={link.href}
          class="text-sm font-medium text-gray-700 dark:text-gray-300 hover:text-[#7F5AF0] dark:hover:text-[#7F5AF0] transition"
        >
          {link.label}
        </a>
      ))}
    </nav>

    <!-- Mobile Nav Button -->
    <button class="sm:hidden text-gray-700 dark:text-gray-300 text-xl" aria-label="Open Menu">
      â˜°
    </button>
  </div>
</header>
