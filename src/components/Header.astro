---
const navLinks = [
  { name: 'Home', href: '/' },
  { name: 'Articles', href: '/blog' },
  { name: 'Fiction', href: '/fiction' },
  { name: 'About', href: '/about' },
  { name: 'Contact', href: '/contact' }
];
---

<header class="bg-white dark:bg-[#0F0F1A] border-b border-gray-200 dark:border-gray-700 shadow-sm sticky top-0 z-50">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 flex items-center justify-between h-16">
    <a href="/" class="text-xl font-bold text-[#1A1A2E] dark:text-white">
      Rantique<span class="text-[#7F5AF0]">.</span>
    </a>
    <nav class="hidden md:flex space-x-6 text-sm font-medium">
      {navLinks.map(link => (
        <a href={link.href} class="text-gray-600 dark:text-gray-300 hover:text-[#7F5AF0] dark:hover:text-[#7F5AF0] transition">
          {link.name}
        </a>
      ))}
    </nav>
    <!-- Mobile Menu Placeholder -->
    <div class="md:hidden">
      <!-- Optional: Add Hamburger Menu -->
    </div>
  </div>
</header>
