  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 space-y-8 text-center">

    <!-- Logo & Tagline -->
    <div class="space-y-1">
      <a
        href="/"
        aria-label="Rantique Home"
        class="inline-block text-3xl font-extrabold tracking-wide text-[#7F5AF0] hover:text-[#9B7BFF] transition-colors duration-300 focus:outline-none focus:ring-2 focus:ring-[#9B7BFF] rounded"
      >
        Rantique
      </a>
      <p class="text-sm text-gray-400 italic select-none">A Boutique of Insightful Ideas</p>
    </div>

    <!-- Navigation -->
    <nav
      aria-label="Footer Navigation"
      class="flex flex-wrap justify-center gap-x-8 gap-y-3 text-sm font-medium"
    >
      <a href="/blog" class="footer-link">Blog</a>
      <a href="/fiction" class="footer-link">Fiction</a>
      <a href="/about" class="footer-link">About</a>
      <a href="/contact" class="footer-link">Contact</a>
      <a href="/privacy-policy" class="footer-link">Privacy</a>
    </nav>

    <!-- Tagline or Quote -->
    <p
      class="text-sm text-gray-500 italic max-w-xl mx-auto px-4 select-none"
      aria-label="Site motto or quote"
    >
      &ldquo;Thoughts become words. Words become art.&rdquo;
    </p>

    <!-- MailerLite Signup Form -->
    <div class="max-w-md mx-auto mt-6" aria-label="Newsletter signup form">
      <div class="ml-embedded" data-form="WiC3OA"></div>
    </div>

    <!-- Social Icons -->
    <div
      class="flex justify-center space-x-8 mt-8"
      role="list"
      aria-label="Social media links"
    >
      <a
        href="#"
        class="social-icon"
        aria-label="Twitter"
        role="listitem"
        target="_blank"
        rel="noopener noreferrer"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-6 w-6"
          fill="currentColor"
          viewBox="0 0 24 24"
          aria-hidden="true"
          focusable="false"
        >
