---
import Layout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const stories = await getCollection('fiction');
---

<Layout title="Rantique Fiction" description="Short stories and literary pieces from Rantique.">
  <main class="px-4 md:px-8 lg:px-16 py-12 space-y-8">
    <h1 class="text-3xl font-bold text-center">Fiction Library</h1>
    <ul class="space-y-6 max-w-3xl mx-auto">
      {stories.map(story => (
        <li class="border-b pb-4">
          <a href={`/fiction/${story.slug}/`} class="text-xl font-semibold text-purple-600 hover:underline">
            {story.data.title}
          </a>
          {story.data.description && <p class="text-gray-500 text-sm">{story.data.description}</p>}
          <p class="text-gray-400 text-xs">{story.data.pubDate.toDateString()}</p>
        </li>
      ))}
    </ul>
  </main>
</Layout>
