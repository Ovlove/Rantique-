---
import Layout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const stories = await getCollection('fiction');
---

<Layout title="Rantique Fiction" description="Original short stories by Rantique.">
  <main
    class="px-4 md:px-8 lg:px-16 py-12 space-y-8 max-w-4xl mx-auto"
    x-data="{ query: '', stories: [] }"
    x-init="stories = JSON.parse($refs.storyData.textContent)"
  >
    <h1 class="text-4xl font-bold text-center mb-6">Rantique Fiction</h1>
    <p class="text-center text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
      Where ideas take shape in stories — from poetic to provocative.
    </p>

    <!-- 🔍 Search -->
    <div class="my-6">
      <input 
        type="search" 
        placeholder="Search fiction..." 
        class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary" 
        x-model="query" 
        aria-label="Search fiction"
      />
    </div>

    <!-- 📚 Filtered Fiction List -->
    <section class="grid gap-10">
      <template 
        x-for="story in stories.filter(s => {
          const q = query.toLowerCase();
          return s.title.toLowerCase().includes(q) || (s.description && s.description.toLowerCase().includes(q));
        })" 
        :key="story.slug"
      >
        <article class="bg-white dark:bg-[#1A1A2E] border border-gray-200 dark:border-gray-700 rounded-xl p-6 shadow-sm transition hover:shadow-md">
          <a :href="`/fiction/${story.slug}/`" class="block">
            <h2 class="text-2xl font-semibold text-purple-700 dark:text-purple-400 hover:underline mb-1" x-text="story.title"></h2>
            <p class="text-sm text-gray-600 dark:text-gray-400 mb-2" x-text="story.description" x-show="story.description"></p>
            <p class="text-xs text-gray-400" x-text="new Date(story.pubDate).toDateString()"></p>
          </a>
        </article>
      </template>

      <!-- 🫥 No Results Message -->
      <p 
        x-show="stories.filter(s => s.title.toLowerCase().includes(query.toLowerCase()) || (s.description && s.description.toLowerCase().includes(query.toLowerCase()))).length === 0"
        class="text-center text-gray-500 italic"
      >
        No stories found.
      </p>
    </section>

    <!-- 🔐 Fiction Data for Alpine -->
    <script type="application/json" x-ref="storyData" class="hidden">
      {JSON.stringify(stories.map(story => ({
        slug: story.slug,
        title: story.data.title,
        description: story.data.description || '',
        pubDate: story.data.pubDate?.toISOString?.() || '',
      })))}
    </script>
  </main>
</Layout>
