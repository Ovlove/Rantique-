---
import Layout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const stories = await getCollection('fiction');
---

<Layout title="Rantique Fiction" description="Short stories and literary pieces from Rantique.">
  <main class="px-4 md:px-8 lg:px-16 py-12 space-y-8">
    <h1 class="text-4xl font-bold text-center text-[#1A1A2E] dark:text-white">Fiction Library</h1>
    <p class="text-center text-gray-500 max-w-2xl mx-auto">
      Explore our collection of short stories â€” from the surreal to the sincere.
    </p>

    <ul class="space-y-6 max-w-3xl mx-auto pt-8">
      {stories.map(story => (
        <li class="border-b pb-4">
          <a href={`/fiction/${story.slug}/`} class="text-2xl font-semibold text-purple-700 hover:underline dark:text-purple-400">
            {story.data.title}
          </a>
          {story.data.description && <p class="text-gray-500 text-sm">{story.data.description}</p>}
          <p class="text-gray-400 text-xs">{story.data.pubDate.toDateString()}</p>
        </li>
      ))}
    </ul>
  </main>
</Layout>
