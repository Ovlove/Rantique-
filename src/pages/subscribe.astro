---
import Layout from '../layouts/BaseLayout.astro';

export let title = "Subscribe to Rantique";
---

<Layout title={title} description="Join our newsletter for thoughtful articles and literary gems.">
  <main class="max-w-2xl mx-auto px-4 py-16">
    <h1 class="text-3xl font-bold text-center mb-6">ðŸ“¬ Stay in the Loop</h1>
    <p class="text-center text-gray-600 mb-8">
      Get curated articles and fiction straight to your inbox. No spam, ever.
    </p>

    <form class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 space-y-4">
      <div>
        <label class="block text-gray-700 text-sm font-bold mb-2" for="email">
          Email Address
        </label>
        <input
          class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
          id="email"
          type="email"
          placeholder="you@example.com"
          required
        />
      </div>
      <div class="flex items-center justify-between">
        <button
          class="bg-purple-600 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
          type="submit"
        >
          Subscribe
        </button>
      </div>
    </form>

    <p class="text-center text-sm text-gray-500">
      We value your privacy. Unsubscribe anytime.
    </p>
  </main>
</Layout>
