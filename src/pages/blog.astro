---
import Layout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
const posts = await getCollection('blog');
---

<Layout title="Rantique Blog" description="Browse all articles and stories">
  <main class="px-4 md:px-8 lg:px-16 py-12 space-y-8">
    <h1 class="text-3xl font-bold text-center">Latest Entries</h1>
    <ul class="space-y-6 max-w-3xl mx-auto">
      {posts.map(post => (
        <li class="border-b pb-4">
          <a href={`/blog/${post.slug}/`} class="text-xl font-semibold text-blue-600 hover:underline">
            {post.data.title}
          </a>
          {post.data.description && <p class="text-gray-500 text-sm">{post.data.description}</p>}
          <p class="text-gray-400 text-xs">{post.data.pubDate.toDateString()}</p>
        </li>
      ))}
    </ul>
  </main>
</Layout>
