---
import Layout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

function calculateReadingTime(text) {
  const wordsPerMinute = 200;
  const wordCount = text.trim().split(/\s+/).length;
  return Math.ceil(wordCount / wordsPerMinute);
}

const rawPosts = await getCollection('blog');

// Map posts to include readingTime and formattedDate automatically
const posts = rawPosts.slice(0, 3).map(post => ({
  slug: post.slug,
  title: post.data.title,
  description: post.data.description || '',
  pubDate: post.data.pubDate,
  formattedDate: post.data.pubDate.toLocaleDateString(undefined, { year: 'numeric', month: 'short', day: 'numeric' }),
  readingTime: calculateReadingTime(post.body.raw || ''),
}));
---

<Layout title="Rantique – A Boutique of Insightful Ideas" description="Articles, opinions, and short fiction that spark thought.">
  <main class="px-4 md:px-8 lg:px-16 py-16 space-y-12 max-w-4xl mx-auto text-center">

    <!-- Brand Logo -->
    <img src="/favicon-32x32.png" alt="Rantique Logo" class="mx-auto w-12 h-12" loading="lazy" />

    <!-- Main Heading -->
    <h1 class="text-4xl font-extrabold tracking-tight text-gray-900 dark:text-white">
      Welcome to <span class="text-primary">Rantique</span>
    </h1>
    <p class="text-lg text-muted max-w-xl mx-auto">
      A boutique of insightful ideas — exploring stories, commentary, and conversations that matter.
    </p>

    <!-- Latest Blog Posts -->
    <section class="space-y-6 text-left">
      <h2 class="text-2xl font-semibold text-gray-800 dark:text-white">Latest Posts</h2>
      <ul class="space-y-4">
        {posts.map(post => (
          <li class="border-b pb-4" key={post.slug}>
            <a href={`/blog/${post.slug}/`} class="text-xl font-bold text-primary hover:underline">
              {post.title}
            </a>
            {post.description && <p class="text-sm text-gray-600 dark:text-gray-400">{post.description}</p>}
            <p class="text-xs text-muted">
              {post.formattedDate} &middot; {post.readingTime} min read
            </p>
          </li>
        ))}
      </ul>

      <div class="pt-6">
        <a href="/blog" class="inline-block text-sm font-medium px-4 py-2 bg-primary text-white rounded hover:bg-opacity-90 transition">
          View All Posts
        </a>
      </div>
    </section>
  </main>
</Layout>
