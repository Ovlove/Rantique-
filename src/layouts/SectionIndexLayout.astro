---
import BaseLayout from '../layouts/BaseLayout.astro';
import PostCard from '../components/PostCard.astro';

export interface Post {
  slug: string;
  title: string;
  description: string;
  pubDate: string;
  readingTime: number;
  tags: string[];
}

export let section: string;
export let tagline: string;
export let posts: Post[];
export let pageSize: number;
---

<BaseLayout title={section} description={`Rantique ${section.toLowerCase()} collection.`}>
  <main
    class="px-4 md:px-8 lg:px-16 py-12 space-y-12"
    x-data="sectionList"
    x-init="initPosts($refs.postsData.textContent)"
  >
    <!-- Section Header -->
    <header class="text-center space-y-2">
      <h1 class="text-4xl sm:text-5xl font-bold tracking-tight text-[#1A1A2E] dark:text-white">
        Rantique {section}
      </h1>
      <p class="text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">{tagline}</p>
    </header>

    <!-- Search + Tag Filters -->
    <section class="max-w-2xl mx-auto space-y-4">
      <input
        type="search"
        x-model="query"
        placeholder="Search..."
        aria-label="Search posts"
        class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-purple-500 dark:bg-[#0F0F1A] dark:border-gray-700"
      />
      <div class="flex flex-wrap gap-2 text-sm">
        <template x-for="tag in uniqueTags" :key="tag">
          <button
            type="button"
            class="px-3 py-1 border border-gray-300 dark:border-gray-600 rounded-full"
            :class="selectedTag === tag ? 'bg-purple-500 text-white' : 'bg-transparent text-gray-700 dark:text-gray-300'"
            @click="toggleTag(tag)"
            x-text="tag"
          ></button>
        </template>
        <button
          x-show="selectedTag"
          @click="selectedTag = ''"
          class="ml-2 underline text-sm text-gray-500"
          type="button"
        >
          Clear tag
        </button>
      </div>
    </section>

    <!-- Post Cards -->
    <section class="max-w-3xl mx-auto space-y-6">
      <template x-for="(post, index) in filteredPosts()" :key="post.slug">
        <div x-show="showPage(index)">
          <PostCard client:only="astro" {section} {...post} />
        </div>
      </template>

      <p
        x-show="filteredPosts().length === 0"
        class="text-center text-gray-500 italic mt-8"
      >
        No matching {section.toLowerCase()} found.
      </p>
    </section>

    <!-- Pagination Controls -->
    <nav
      class="flex justify-center items-center gap-4 mt-6"
      x-show="totalPages() > 1"
      role="navigation"
      aria-label="Pagination"
    >
      <button
        :disabled="currentPage === 1"
        @click="currentPage--"
        class="px-3 py-1 border rounded"
        :class="currentPage === 1 ? 'opacity-50 cursor-not-allowed' : ''"
      >
        Previous
      </button>

      <template x-for="i in totalPages()" :key="i">
        <button
          @click="currentPage = i"
          class="px-3 py-1 border rounded"
          :class="i === currentPage ? 'bg-purple-500 text-white' : ''"
          x-text="i"
        ></button>
      </template>

      <button
        :disabled="currentPage === totalPages()"
        @click="currentPage++"
        class="px-3 py-1 border rounded"
        :class="currentPage === totalPages() ? 'opacity-50 cursor-not-allowed' : ''"
      >
        Next
      </button>
    </nav>

    <!-- Serialized JSON -->
    <script type="application/json" x-ref="postsData" class="hidden">
      {JSON.stringify(posts)}
    </script>

    <!-- Alpine.js Logic -->
    <script>
      function sectionList() {
        return {
          query: '',
          selectedTag: '',
          currentPage: 1,
          pageSize: {pageSize},
          posts: [],
          initPosts(json) {
            this.posts = JSON.parse(json);
          },
          get uniqueTags() {
            return [...new Set(this.posts.flatMap(p => p.tags))].sort();
          },
          toggleTag(tag) {
            this.selectedTag = this.selectedTag === tag ? '' : tag;
          },
          filteredPosts() {
            const q = this.query.toLowerCase();
            return this.posts.filter(p => {
              const textMatch = p.title.toLowerCase().includes(q) || p.description.toLowerCase().includes(q);
              const tagMatch = this.selectedTag ? p.tags.includes(this.selectedTag) : true;
              return textMatch && tagMatch;
            });
          },
          totalPages() {
            return Math.ceil(this.filteredPosts().length / this.pageSize);
          },
          showPage(index) {
            const start = (this.currentPage - 1) * this.pageSize;
            return index >= start && index < start + this.pageSize;
          }
        };
      }
    </script>
  </main>
</BaseLayout>
